<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover"
  />
  <title>Histórico de Chat</title>
    <link rel="stylesheet" href="/painel/css/whatsapp-chat.css" /> <!-- novo CSS para estilo WhatsApp -->
</head>
<body>
  <div class="speech-wrapper">
    <!-- Header preenchido pelo JS (renderHeader) -->
    <div id="chatHeader"></div>

    <!-- Lista do chat (preenchida pelo JS: renderChatList) -->
    <main id="chatList" aria-live="polite"></main>

    <!-- CTA fixo no rodapé (preenchido pelo JS: renderCTA) -->
    <div id="chatCta"></div>
  </div>

  <!-- JS que busca /api/historico/:phoneAndIds e renderiza a tela -->
  <script type="module" src="/painel/js/historico.js"></script>
</body>
</html>
