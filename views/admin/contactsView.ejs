<!doctype html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Contatos</title>
  <link rel="stylesheet" href="/css/admin/adminStyles.css" />
  <script src="/js/admin/adminScripts.js" defer></script>
  <link rel="icon" type="image/png" href="/media/LOGO-INF.png" />
</head>
<body>
  <div class="app">
    <!-- Sidebar -->
    <%- include('./partials/sidebarPartialView') %>
    <!-- Main -->
    <main class="main">
      <!-- Topbar -->
      <%- include('./partials/topbarPartialView') %>
      <section class="container">
        <h1 class="h1">Contatos</h1>
        <div class="grid grid--1">
          <% if (contacts && contacts.length > 0) { %>
            <% contacts.forEach(function(c) { %>
              <div class="card contato-card" style="display:flex;flex-direction:column;align-items:center;gap:1.2rem;justify-content:center;">
                <div style="width:100%;text-align:center;">
                  <div style="font-weight:bold;font-size:1.1rem;"><%= c.contactname %></div>
                  <div style="margin-top:0.2rem;color:var(--muted);"><%= c.contactphone %></div>
                </div>
                <div style="width:100%;display:flex;flex-direction:column;gap:0.6rem;">
                  <a class="btn btn--primary contato-btn-wa" style="width:100%;justify-content:center;" href="https://wa.me/<%= c.contactphone.replace(/\D/g,'') %>" target="_blank">
                    Falar com contato
                  </a>
                  <a
                    class="btn btn--outline"
                    style="<%= 'width:100%;justify-content:center;' + (!c.matriculaId ? 'pointer-events:none;opacity:.5;' : '') %>"
                    href="<%= c.matriculaId ? `/admin/matriculas/${c.matriculaId}` : '#' %>"
                    <%= !c.matriculaId ? 'tabindex=-1 aria-disabled=true' : '' %>
                  >
                    Matr√≠cula
                  </a>
                  <a
                    class="btn btn--outline"
                    style="<%= 'width:100%;justify-content:center;' + (!(c.atendimentoIds && c.atendimentoIds.length) ? 'pointer-events:none;opacity:.5;' : '') %>"
                    href="<%= (c.atendimentoIds && c.atendimentoIds.length) ? `/admin/atendimentos/${c.atendimentoIds.join(',')}` : '#' %>"
                    <%= !(c.atendimentoIds && c.atendimentoIds.length) ? 'tabindex=-1 aria-disabled=true' : '' %>
                  >
                    Atendimentos
                  </a>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="card muted">Nenhum contato encontrado.</div>
          <% } %>
        </div>
      </section>
    </main>
  </div>
</body>
</html>
</html>
